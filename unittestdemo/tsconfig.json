{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "strict": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "composite": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true  // Only emit declaration files (.d.ts)
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
